# X-Coder Store Environment Variables
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=production
PORT=10000

# Store Configuration
STORE_NAME=X-Coder Store
STORE_AUTHOR=Mr Ntando Ofc
STORE_EMAIL=info@xcoder.store

# Admin Credentials
ADMIN_USERNAME=Ntando
ADMIN_PASSWORD=Ntando

# Security
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-super-secret-session-key-here

# File Upload Settings
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads

# Database (if needed in future)
# DATABASE_URL=mongodb://localhost:27017/xcoder-store

# External Services (if needed)
# STRIPE_SECRET_KEY=sk_test_...
# SENDGRID_API_KEY=SG....

# CORS Settings
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100